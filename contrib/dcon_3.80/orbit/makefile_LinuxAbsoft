# This is the makefile for ORBIT on LinuxAbsoft computers.

FFLAGS = -p../equil -O2
F90 = f90 $(FFLAGS)

.f.o:
	$(F90) -c $*.f

LIBDIR = \
	-L../lib/LinuxAbsoft \
	-L/usr/local/lib \
	-L$(HOME)/lib

LIBS = \
	$(LIBDIR) \
	-lequil \
	-llsode \
	-llapack_Absoft \
	-lblas_Absoft

OBJS = \
	orbit_mod.o \
	restart.o \
	field.o \
	inner.o \
	outer.o \
	inner_gc.o \
	outer_gc.o \
	orbit.o

orbit: $(OBJS)
	$(F90) -o orbit $(OBJS) $(LIBS)

# dependencies

orbit_mod.o: ../equil/EQUIL_MOD.mod ../equil/EQUIL_OUT_MOD.mod
restart.o: orbit_mod.o
field.o: orbit_mod.o
inner.o: field.o restart.o
outer.o: field.o restart.o
inner_gc.o: field.o restart.o
outer_gc.o: field.o restart.o
orbit.o: inner.o outer.o inner_gc.o outer_gc.o

clean:
	rm -f *.o *.mod *.out *.bin orbit
