# This is the makefile for ORBIT on LinuxLahey computers.

FFLAGS = -I../equil -O --o2
F90 = lf95 $(FFLAGS)

.f.o:
	$(F90) -c $*.f

LIBDIR = \
	-L../lib/LinuxLahey \
	-L/usr/pppl/lff95/6.20c/lapack-3.0

LIBS = \
	$(LIBDIR) \
	-llsode \
	-lequil \
	-llapack \
	-lblas

OBJS = \
	orbit_mod.o \
	restart.o \
	field.o \
	inner.o \
	outer.o \
	inner_gc.o \
	outer_gc.o \
	orbit.o

orbit: $(OBJS)
	$(F90) -o orbit $(OBJS) $(LIBS)

# dependencies

orbit_mod.o: ../equil/equil_mod.mod ../equil/equil_out_mod.mod
restart.o: orbit_mod.o
field.o: orbit_mod.o
inner.o: field.o restart.o
outer.o: field.o restart.o
inner_gc.o: field.o restart.o
outer_gc.o: field.o restart.o
orbit.o: inner.o outer.o inner_gc.o outer_gc.o

clean:
	rm -f *.o *.mod *.out *.bin orbit
