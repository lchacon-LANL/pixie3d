#Define variables

-include make.inc

LOCALDIR := $(shell basename $(CURDIR))

#Define targets

.PHONY: test test-a test-b rebuild rebuild-a rebuild-b setup

setup: ;
	-@ln -s ../../../bin/$(EXEC)
	-@ln -s ../../../bin/$(PLOT)

rebuild-a rebuild-b rebuild: ;
	@echo "Rebuilding test in $(LOCALDIR)"
	-@rm pixie3d.out pixie3d.tst record.* 2> /dev/null
	@$(EXEC) > pixie3d.out

test-a test-b test: ;
	@echo
	@echo "Running test in $(LOCALDIR)"
	-@mv record.bin record.bak 2> /dev/null
	@$(EXEC) > pixie3d.tst
	-@([ -z "`diff -bB pixie3d.tst pixie3d.out`" ] || echo "==> Differences found in $(LOCALDIR) <==")
	-@([ -z "`diff -bB pixie3d.tst pixie3d.out`" ] || diff -bB pixie3d.tst pixie3d.out)
	-@([ -z "`diff -bB pixie3d.tst pixie3d.out`" ] && echo "No differences found in $(LOCALDIR)")
	-@([ -z "`diff -bB pixie3d.tst pixie3d.out`" ] && rm record.bak pixie3d.tst 2> /dev/null)

