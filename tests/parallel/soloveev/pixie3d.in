 &setup
    nxd      = 32
    nyd      = 32
    nzd      = 32

    xmax     = 1d0
    ymax     = 0.
    zmax     = 0.

    numerical_grid = t

    bcs      = 'spt','def','per','per','per','per'

    coords   = 'ext'
 /

 &phys
    eta      = 1d-3
    nu       = 1d-2
    dd       = 0d-3
    chi      = 0d-3

    dlambda  = 0.5

    gamma    = 1.6667

    adiabatic  = t

    pvx      = 1d-4
    odd      = f
    random   = f

    nh2      = 1
    nh3      =-2

    equil    = 'vmec'
 /

 &fv
    sym_st   = f

    advect   = 4
    v_advect = 4

    solenoidal = t
    nc_eom_f   = t
    nc_eom_v   = f

    solve_rho  = f
    use_p_eom  = t
    use_p_diff = t
 /

 &ts
    dt       = 5d-4

    tmax     = 5d-3
    dstep    = 5d-3

    ts_restart  = f
    ts_adapt_dt = f

    cnfactor = 0d0
    sm_flag  = 2

    source   = t

 /

 &nks
    maxksp   = 20
    maxitgm  = 20
    tolgm    = 8d-1
    rtol     = 1d-4
    atol     = 0d0
    method   = 1
    mf_eps   = 1d-6
    vol_wgt  = t
    iguess   = 0
 /

 &pc
    pc_type   = 'id'
    pc_tol    = 1d-1
    pc_iter   = 0
    mg_vcyc   = 2
    sm_iter   = 4
 /

 &i_o
    ilevel   = 0
    dcon     = f
    check_grid = f
    chk_src  = f
    test     = t
    equ_file = 'wout_soloveev_k=1.txt'
 /

 &graphics
    sel_diag  = 2,12,15,17,18,19,20,22,23
    dplot = 1d-4
    prof_conf = 1,'r',1,0,1
    cont_conf = 3,'R','Z',1,1,1
!    cont_conf = 2,'R','PHI',1,1,1
    hdf_plot  = t
    xdraw_plot= t
/

&plots
    poincare  = f
    clean = f
 /

